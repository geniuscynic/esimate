<?xml version="1.0" encoding="utf-8"?>
<Template code="HAD" title="医院焦虑抑郁情绪测量表（HAD量表）">
    <Group>
        <RadioBox code="00" title="1.我感到紧张（或痛苦）" desc="1.我感到紧张（或痛苦）">
            <Option code="00item1" text="几乎所有时候" score="3"/>
            <Option code="01item1" text="大多时候" score="2"/>
            <Option code="02item1" text="有时候" score="1"/>
            <Option code="03item1" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="01" title="2.我对以往感兴趣的事情还是有兴趣" desc="2.我对以往感兴趣的事情还是有兴趣">
            <Option code="00item2" text="肯定一样" score="0"/>
            <Option code="01item2" text="不像以前那样多" score="1"/>
            <Option code="02item2" text="只有一点" score="2"/>
            <Option code="03item2" text="基本上没有了" score="3"/>
        </RadioBox>
        <RadioBox code="02" title="3.我感到有些害怕，好像预感到有什么可怕的事情要发生" desc="3.我感到有些害怕，好像预感到有什么可怕的事情要发生">
            <Option code="00item3" text="非常肯定和十分严重" score="3"/>
            <Option code="01item3" text="是的，但并不太严重" score="2"/>
            <Option code="02item3" text="有一点，但并不使我苦恼" score="1"/>
            <Option code="03item3" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="03" title="4.我能够哈哈大笑，并看到事物有趣的一面" desc="4.我能够哈哈大笑，并看到事物有趣的一面">
            <Option code="00item4" text="我经常这样" score="0"/>
            <Option code="01item4" text="我现在已经不大这样了" score="1"/>
            <Option code="02item4" text="现在肯定是不太多了" score="2"/>
            <Option code="03item4" text="根本没有" score="3"/>
        </RadioBox>
        <RadioBox code="04" title="5.我心中充满烦恼" desc="5.我心中充满烦恼">
            <Option code="00item5" text="大多数时间" score="3"/>
            <Option code="01item5" text="常常如此" score="2"/>
            <Option code="02item5" text="时时，但并不经常" score="1"/>
            <Option code="03item5" text="偶然如此" score="0"/>
        </RadioBox>
        <RadioBox code="05" title="6.我感到愉快" desc="6.我感到愉快">
            <Option code="00item6" text="根本没" score="3"/>
            <Option code="01item6" text="并不经常这样" score="2"/>
            <Option code="02item6" text="有时" score="1"/>
            <Option code="03item6" text="大多数时间" score="0"/>
        </RadioBox>
        <RadioBox code="06" title="7.我能够安闲而轻松地坐着" desc="7.我能够安闲而轻松地坐着">
            <Option code="00item7" text="肯定" score="0"/>
            <Option code="01item7" text="经常" score="1"/>
            <Option code="02item7" text="并不经常" score="2"/>
            <Option code="03item7" text="根本没有" score="3"/>
        </RadioBox>
        <RadioBox code="07" title="8.我感到人好像变迟钝了" desc="8.我感到人好像变迟钝了">
            <Option code="00item8" text="几乎所有时间" score="3"/>
            <Option code="01item8" text="很经常" score="2"/>
            <Option code="02item8" text="有时" score="1"/>
            <Option code="03item8" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="08" title="9.我感到一种令人发抖的恐惧" desc="9.我感到一种令人发抖的恐惧">
            <Option code="00item9" text="根本没有" score="0"/>
            <Option code="01item9" text="很正常" score="1"/>
            <Option code="02item9" text="有时" score="2"/>
            <Option code="03item9" text="非常经常" score="3"/>
        </RadioBox>
        <RadioBox code="09" title="10.我对自己的外表（打扮自己）失去兴趣" desc="10.我对自己的外表（打扮自己）失去兴趣">
            <Option code="00item10" text="肯定" score="3"/>
            <Option code="01item10" text="经常" score="2"/>
            <Option code="02item10" text="并不经常" score="1"/>
            <Option code="03item10" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="10" title="11.我有点坐立不安，好像感到非要活动不可" desc="11.我有点坐立不安，好像感到非要活动不可">
            <Option code="00item11" text="确实非常多" score="3"/>
            <Option code="01item11" text="是不少" score="2"/>
            <Option code="02item11" text="并不多" score="1"/>
            <Option code="03item11" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="11" title="12.我怀着愉快的心情憧憬未来" desc="12.我怀着愉快的心情憧憬未来">
            <Option code="00item12" text="差不多是这样做" score="0"/>
            <Option code="01item12" text="并不完全是这样做的" score="1"/>
            <Option code="02item12" text="很少这样做" score="2"/>
            <Option code="03item12" text="几乎从来不这样做" score="3"/>
        </RadioBox>
        <RadioBox code="12" title="13.我突然有恐惧感" desc="13.我突然有恐惧感">
            <Option code="00item13" text="确实很经常" score="3"/>
            <Option code="01item13" text="时常" score="2"/>
            <Option code="02item13" text="并非经常" score="1"/>
            <Option code="03item13" text="根本没有" score="0"/>
        </RadioBox>
        <RadioBox code="13" title="14.我能欣赏一本好书或一项好的广播或电视节目" desc="14.我能欣赏一本好书或一项好的广播或电视节目">
            <Option code="00item14" text="常常" score="0"/>
            <Option code="01item14" text="有时" score="1"/>
            <Option code="02item14" text="并非经常" score="2"/>
            <Option code="03item14" text="很少" score="3"/>
        </RadioBox>
    </Group>
</Template>