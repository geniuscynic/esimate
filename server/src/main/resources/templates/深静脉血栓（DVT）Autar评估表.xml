<?xml version="1.0" encoding="utf-8"?>
<Template code="DVT_Autar" title="深静脉血栓（DVT）Autar评估表">
<Group>
<RadioBox code="00" title=" 1.年龄" desc=" 1.年龄">
<Option code="00item1" text="10-30岁" score="0"/>
<Option code="01item1" text="31-40岁" score="1"/>
<Option code="02item1" text="41-50岁" score="2"/>
<Option code="03item1" text="51-60岁" score="3"/>
<Option code="04item1" text="61-70岁" score="4"/>
<Option code="05item1" text="&gt;70岁" score="5"/>
</RadioBox>
<RadioBox code="01" title="2.体重指数（BMI）" desc="2.体重指数（BMI）">
<Option code="00item2" text="低体重,BMI&lt;18.5" score="0"/>
<Option code="01item2" text="正常体重 BMI 18.5-22.9" score="1"/>
<Option code="02item2" text="超重 BMI 23-24.9" score="2"/>
<Option code="03item2" text="肥胖 BMI 25-29.9" score="3"/>
<Option code="04item2" text="过度肥胖 BMI &gt;=30" score="4"/>
</RadioBox>
<RadioBox code="02" title="3.运动能力" desc="3.运动能力">
<Option code="00item3" text="自由活动" score="0"/>
<Option code="01item3" text="运动受限（需要辅助工具）" score="1"/>
<Option code="02item3" text="运动严重受限（需他人协助）" score="2"/>
<Option code="03item3" text="使用轮椅" score="3"/>
<Option code="04item3" text="绝对卧床" score="4"/>
</RadioBox>
<RadioBox code="03" title="4.头部受伤" desc="4.头部受伤">
<Option code="00item4" text="有" score="1"/>
<Option code="01item4" text="无" score="0"/>
</RadioBox>
<RadioBox code="04" title="5.胸部受伤" desc="5.胸部受伤">
<Option code="00item5" text="有" score="1"/>
<Option code="01item5" text="无" score="0"/>
</RadioBox>
<RadioBox code="05" title="6.脊柱受伤" desc="6.脊柱受伤">
<Option code="00item6" text="是" score="2"/>
<Option code="01item6" text="否" score="0"/>
</RadioBox>
<RadioBox code="06" title="7.骨盆受伤" desc="7.骨盆受伤">
<Option code="00item7" text="是" score="3"/>
<Option code="01item7" text="否" score="0"/>
</RadioBox>
<RadioBox code="07" title="8.下肢受伤" desc="8.下肢受伤">
<Option code="00item8" text="是" score="4"/>
<Option code="01item8" text="否" score="0"/>
</RadioBox>
<RadioBox code="08" title="9.溃疡性结肠炎" desc="9.溃疡性结肠炎">
<Option code="00item9" text="是" score="1"/>
<Option code="01item9" text="否" score="0"/>
</RadioBox>
<RadioBox code="09" title="10.红细胞增多症" desc="10.红细胞增多症">
<Option code="00item10" text="是" score="2"/>
<Option code="01item10" text="否" score="0"/>
</RadioBox>
<RadioBox code="10" title="11.静脉曲张" desc="11.静脉曲张">
<Option code="00item11" text="是" score="3"/>
<Option code="01item11" text="否" score="0"/>
</RadioBox>
<RadioBox code="11" title="12.慢性心脏病" desc="12.慢性心脏病">
<Option code="00item12" text="是" score="3"/>
<Option code="01item12" text="否" score="0"/>
</RadioBox>
<RadioBox code="12" title="13.急性心肌梗死" desc="13.急性心肌梗死">
<Option code="00item13" text="是" score="4"/>
<Option code="01item13" text="否" score="0"/>
</RadioBox>
<RadioBox code="13" title="14.恶性肿瘤" desc="14.恶性肿瘤">
<Option code="00item14" text="是" score="5"/>
<Option code="01item14" text="否" score="0"/>
</RadioBox>
<RadioBox code="14" title="15.脑血管疾病" desc="15.脑血管疾病">
<Option code="00item15" text="是" score="6"/>
<Option code="01item15" text="否" score="0"/>
</RadioBox>
<RadioBox code="15" title="16.静脉栓塞病史" desc="16.静脉栓塞病史">
<Option code="00item16" text="是" score="7"/>
<Option code="01item16" text="否" score="0"/>
</RadioBox>
<RadioBox code="16" title="17.如果有口服避孕药，现在年龄" desc="17.如果有口服避孕药，现在年龄">
<Option code="00item17" text="未使用口服避孕药" score="0"/>
<Option code="01item17" text="20-35岁" score="1"/>
<Option code="02item17" text="&gt;35岁" score="2"/>
</RadioBox>
<RadioBox code="17" title="18.激素治疗" desc="18.激素治疗">
<Option code="00item18" text="是" score="2"/>
<Option code="01item18" text="否" score="0"/>
</RadioBox>
<RadioBox code="18" title="19.怀孕/产褥期" desc="19.怀孕/产褥期">
<Option code="00item19" text="是" score="3"/>
<Option code="01item19" text="否" score="0"/>
</RadioBox>
<RadioBox code="19" title="20.血栓形成" desc="20.血栓形成">
<Option code="00item20" text="是" score="4"/>
<Option code="01item20" text="否" score="0"/>
</RadioBox>
<RadioBox code="20" title="21.外科手术(只选择其中一项)" desc="21.外科手术(只选择其中一项)">
<Option code="00item21" text="无手术" score="0"/>
<Option code="01item21" text="小手术&lt;=30分钟" score="1"/>
<Option code="02item21" text="择期大手术" score="2"/>
<Option code="03item21" text="急诊大手术" score="3"/>
<Option code="04item21" text="胸部手术" score="3"/>
<Option code="05item21" text="腹部手术" score="3"/>
<Option code="06item21" text="泌尿系手术" score="3"/>
<Option code="07item21" text="神经系统手术" score="3"/>
<Option code="08item21" text="妇科手术" score="3"/>
<Option code="09item21" text="骨科（腰部以下）手术" score="4"/>
</RadioBox>
</Group>
</Template>