<?xml version="1.0" encoding="utf-8"?>
<Template code="ISI" title="失眠严重程度指数量表(ISI)">
    <Group>
        <RadioBox code="00" title="1a.入睡困难" desc="1a.入睡困难">
            <Option code="00item1" text="无" score="0"/>
            <Option code="01item1" text="轻度" score="1"/>
            <Option code="02item1" text="中度" score="2"/>
            <Option code="03item1" text="重度" score="3"/>
            <Option code="04item1" text="极重度" score="4"/>
        </RadioBox>
        <RadioBox code="01" title="1b.维持睡眠困难" desc="1b.维持睡眠困难">
            <Option code="00item2" text="无" score="0"/>
            <Option code="01item2" text="轻度" score="1"/>
            <Option code="02item2" text="中度" score="2"/>
            <Option code="03item2" text="重度" score="3"/>
            <Option code="04item2" text="极重度" score="4"/>
        </RadioBox>
        <RadioBox code="02" title="1c.早醒" desc="1c.早醒">
            <Option code="00item3" text="无" score="0"/>
            <Option code="01item3" text="轻度" score="1"/>
            <Option code="02item3" text="中度" score="2"/>
            <Option code="03item3" text="重度" score="3"/>
            <Option code="04item3" text="极重度" score="4"/>
        </RadioBox>
        <RadioBox code="03" title="2.对您当前睡眠模式的满意度" desc="2.对您当前睡眠模式的满意度">
            <Option code="00item4" text="很满意" score="0"/>
            <Option code="01item4" text="满意" score="1"/>
            <Option code="02item4" text="一般" score="2"/>
            <Option code="03item4" text="不满意" score="3"/>
            <Option code="04item4" text="很不满意" score="4"/>
        </RadioBox>
        <RadioBox code="04" title="3.您认为您的睡眠问题在多大程度上干扰了您的日间功能（如：日间疲劳、处理工作和日常事务的能力、注意力、记忆力、情绪等）："
                  desc="3.您认为您的睡眠问题在多大程度上干扰了您的日间功能（如：日间疲劳、处理工作和日常事务的能力、注意力、记忆力、情绪等）：">
            <Option code="00item5" text="没有干扰" score="0"/>
            <Option code="01item5" text="轻微" score="1"/>
            <Option code="02item5" text="有些" score="2"/>
            <Option code="03item5" text="较多" score="3"/>
            <Option code="04item5" text="很多干扰" score="4"/>
        </RadioBox>
        <RadioBox code="05" title="4.与其他人相比，您的失眠问题对您的生活质量有多大程度的影响或损害：" desc="4.与其他人相比，您的失眠问题对您的生活质量有多大程度的影响或损害：">
            <Option code="00item6" text="没有" score="0"/>
            <Option code="01item6" text="一点" score="1"/>
            <Option code="02item6" text="有些" score="2"/>
            <Option code="03item6" text="较多" score="3"/>
            <Option code="04item6" text="很多" score="4"/>
        </RadioBox>
        <RadioBox code="06" title="5.您对自己当前睡眠问题有多大程度的担忧/沮丧：" desc="5.您对自己当前睡眠问题有多大程度的担忧/沮丧：">
            <Option code="00item7" text="没有" score="0"/>
            <Option code="01item7" text="一点" score="1"/>
            <Option code="02item7" text="有些" score="2"/>
            <Option code="03item7" text="较多" score="3"/>
            <Option code="04item7" text="很多" score="4"/>
        </RadioBox>
    </Group>
</Template>